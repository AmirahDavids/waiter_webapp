<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center my-5">
            <h3>Please select 3 days that you want to work for this week</h3>
        </div>
        <div class="col-lg-12 my-5">

            <form id="selectShift" action="/waiters/{{waiterName}}" method="post" class="card clearfix mb-3">
                <div class="row">
                    {{#each days}}
                    <div class="m-4">
                        <label>
                            <input type="checkbox" name="days" value="{{this.id}}" {{this.state}}>
                            <span>{{this.dayname}}</span>
                        </label>
                    </div>
                    {{/each}}
                </div>
            </form>
            <div class="row">
                <div class="col-lg-12 ">
                    <div class="mx-auto">
                        <button form="selectShift" type="submit">Select Shift</button>
                    </div>

                </div>

                <div class="my-5" style="width: 100%;">
                    {{#if msg}}
                    <h5 class="{{color}}">{{msg}}</h5>
                    {{/if}}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 ">
                    <div class="mx-auto my-2">

                        <form action="/days" method="get">
                            <button type="submit">View Booked Shifts</button>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>